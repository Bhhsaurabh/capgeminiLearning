package OperatorsAss;

public class problem6 {
	public static void main(String[] args) {
		int totalAmount = 1000;
		int speedLimit = 60;
		int vehicleSpeed = 80;
		boolean isEmgDr = true;
		int fineAmount = 500;
		boolean takeFine = !isEmgDr && (vehicleSpeed >= speedLimit) ? true : false;
		totalAmount = takeFine ? totalAmount -= fineAmount : totalAmount;
		
		System.out.println("Take Fine : " + takeFine);
		System.out.println("TotalAmount Left " + totalAmount);
	}
}vehicle
