package OperatorsAss;

public class problem2 {
	public static void main(String[] args) {
		boolean isActive = true;
		int withAm = 5;
		int bal = 2929;
		boolean allowWith = isActive && bal > 0;
		bal = allowWith ? bal -= withAm : bal;
		System.out.println("Is withdrawal allowed : " + allowWith);
		System.out.println("Rem bal : " + bal);
	}
}
